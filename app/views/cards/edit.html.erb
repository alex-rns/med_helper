<div class="container">
  <div class="row">
    <div class="col-sm-10 offset-md-1">
      <div class="card card-pacient-first">
        <div class="card-header card-pacient text-center">
          Редактировать карту пациента</div>
         <div class="card-body">
           <%= form_with url: user_card_path(current_user, @card), method: 'PUT' do |f| %>
           <div class="mb-3">
             <div class = "form-group">
               <%= f.label "ФИО" %>
               <%= f.text_field :full_name, class: 'form-control', required: true%>
             </div>
           </div>
           <div class="mb-3">
             <div class = "form-group">
               <%= f.label "Пол" %>
               <%= f.text_area :gender, class: 'form-control', required: true%>
             </div>
           </div>
           <div class="mb-3">
             <div class = "form-group">
               <%= f.label "Адрес" %>
               <%= f.text_area :address, class: 'form-control', required: true%>
             </div>
           </div>
           <div class="mb-3">
             <div class = "form-group">
               <%= f.label "Поручитель" %>
               <%= f.text_area :member, class: 'form-control', required: true%>
             </div>
           </div>
           <div class="mb-3">
             <div class = "form-group">
               <%= f.label "Примечания" %>
               <%= f.text_area :comment, class: 'form-control', required: true%>
             </div>
           </div>
           <div class="mb-3">
             <div class = "form-group">
               <%= f.label "Email" %>
               <%= f.text_area :email, class: 'form-control', required: true%>
             </div>
           </div>
           <div class="mb-3">
             <div class = "form-group">
               <%= f.label "Работа" %>
               <%= f.text_area :work, class: 'form-control', required: true%>
             </div>
           </div>
           <div class="d-flex justify-content-center">
             <%= f.submit "Редактировать карту", class: "btn btn-primary" %>
           </div>
           <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
