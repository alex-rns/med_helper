<div class="container">
  <h3 class="text-center text-primary pt-4 pb-3">Карта пациента</h3>
  <div class="pacient-card bg-primary-light d-flex flex-column align-items-center">
    <%= image_tag(@card.user&.image, size: 150, class: 'text-center img-fluid mt-4') %>
    <div class="pacient-card-info bg-primary p-4 text-white m-4 row">
      <div class="d-flex flex-column">
        <p>
          <strong>ФИО: </strong>
          <span class="fw-lighter"><%= @card&.full_name %></span>
        </p>
        <p>
          <strong>Пол: </strong>
          <span class="fw-lighter"><%= @card&.gender %></span>
        </p>
        <p>
          <strong>Телефон: </strong>
          <span class="fw-lighter"><%= @card&.phone %></span>
        </p>
        <p>
          <strong>Адрес: </strong>
          <span class="fw-lighter"><%= @card&.address %></span>
        </p>
        <p>
          <strong>Место работы: </strong>
          <span class="fw-lighter"><%= @card&.work %></span>
        </p>
        <p>
          <strong>Поручитель: </strong>
          <span class="fw-lighter"><%= @card&.member %></span>
        </p>
        <p>
          <strong>Примечания: </strong>
          <span class="fw-lighter"><%= @card&.comment %></span>
        </p>
        <%= link_to "Создать протокол приема пациента", new_user_card_protocol_path(@card.user, @card),
                    class: "btn btn-primary btn-show-event" if current_user.expert.present? %>
      </div>
    </div>
    <%= link_to "Редактировать", edit_user_card_path(@card.user, @card),
                class: "btn btn-light text-primary d-block mb-4" %>
  </div>
</div>


<h3 class="text-center text-primary pt-4 pb-3">История приемов</h3>
<% @protocols.each do |protocol| %>
  <div class="row">
    <div class="col-sm-10 offset-md-1">
      <div class="card card-pacient-first">
        <div class="card-header card-pacient text-center">
          Протокол приема № <%= @card.id + protocol.id %>
        </div>
        <div class="card-body">
          <div class="row">
            <div class="col-sm-2">
              <%= image_tag(protocol.expert&.image, size: 80, class: 'rounded-circle card-client-show') %>
            </div>
            <div class="col-sm-8">
              <h7 class="fw-lighter"><strong><%= protocol&.expert.full_name %></strong></h7>
              <br>
              <h8 class="fw-lighter"><strong></strong><%= protocol&.expert.category.name %></h8>
              <br>
              <h8 class="fw-lighter"><strong>Жалобы пациента: </strong><%= protocol&.complaint %></h8>
              <br>
              <% if protocol&.type_of_inspection == "first_visit" %>
                <span class="fw-lighter"><span class="border border-2 rounded-pill badge bg-primary text-wrap">Первичный прием</span></span><br>
              <% else %>
                <span class="fw-lighter"><span class="border border-2 rounded-pill badge bg-info text-wrap">Повторный прием</span></span><br>
              <% end %>
            </div>
            <div class="col-sm-2">
              <%= link_to "Подробнее", user_card_protocol_path(@card.user, @card, protocol), class: "btn btn-outline-dark" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <br>
<% end %>
