<div class="container">
  <div class="row">
    <div class="col-sm-10 offset-md-1">
      <div class="card card-pacient-first">
  <div class="card-header card-pacient text-center">
    Карта пациента
  </div>
  <div class="card-body">
    <%= form_with url: expert_cards_path(@expert) do |f| %>
    <%= f.hidden_field 'card[user_id]', value: params[:pacient], class: 'form-control', required: true%>
    <div class="mb-3">
      <div class = "form-group">
        <%= f.label "ФИО" %>
        <%= f.text_field 'card[full_name]', class: 'form-control', required: true%>
      </div>
    </div>
    <div class="mb-3">
      <div class = "form-group">
        <%= f.label "Пол" %>
        <%= f.text_field 'card[gender]', class: 'form-control', required: true%>
      </div>
    </div>
    <div class="mb-3">
      <div class = "form-group">
        <%= f.label "Email" %>
        <%= f.text_field 'card[email]', class: 'form-control', required: true%>
      </div>
    </div>
    <div class="mb-3">
      <div class = "form-group">
        <%= f.label "Адрес" %>
        <%= f.text_field 'card[address]', class: 'form-control', required: true%>
      </div>
    </div>
    <div class="mb-3">
      <div class = "form-group">
        <%= f.label "Место работы" %>
        <%= f.text_field 'card[work]', class: 'form-control', required: true%>
      </div>
    </div>
    <div class="mb-3">
      <div class = "form-group">
        <%= f.label "Поручитель" %>
        <%= f.text_field 'card[member]', class: 'form-control', required: true%>
      </div>
    </div>
    <div class="mb-3">
      <div class = "form-group">
        <%= f.label "Примечания" %>
        <%= f.text_area 'card[comment]', class: 'form-control', required: true%>
      </div>
    </div>
    <div class="d-flex justify-content-center">
      <%= f.submit "Создать карту пациента", class: "btn btn-primary" %>
    </div>
    <% end %>
  </div>
</div>
    </div>
  </div>
</div>
</br>
