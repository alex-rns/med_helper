<div class="container-fluid" id="bgimage">
  <div class="row">
    <div class="col-sm">
    </div>
    <div class="col-sm-5 border event-border shadow p-3 mb-5 bg-body rounded-3">
      <h4 class="text-center">Запись на прием к врачу</h4>
      <hr>

      <%= form_with model: [@expert, @event] do |f| %>
      <div class = "form-group">
        <%= f.label "Имя и фамилия пациента" %>
        <%= f.text_field :name, class: 'form-control' %>
        <% @event.errors.full_messages_for(:name).each do |message| %>
          <div class="alert alert-warning alert-event"><%= message %></div>
        <% end %>
      </div>

      <div class = "form-group">
        <%= f.label "Tелефон" %>
        <%= f.text_field :phone, class: 'form-control' %>
        <% @event.errors.full_messages_for(:phone).each do |message| %>
          <div class="alert alert-warning alert-event"><%= message %></div>
        <% end %>
      </div>

      <div class = "form-group">
        <%= f.label :email %>
        <%= f.email_field :email, class: 'form-control' %>
        <% @event.errors.full_messages_for(:email).each do |message| %>
          <div class="alert alert-warning alert-event"><%= message %></div>
        <% end %>
      </div>

      <div class = "form-group">
        <%= f.label "Тип приема" %>
        <%= select_tag('event[type]', options_for_select([['Офлайн консультация', 'offline' ], ['Онлайн консультация', 'online']]), class:'form-control') %>
        <% @event.errors.full_messages_for(:type).each do |message| %>
          <div class="alert alert-warning alert-event"><%= message %></div>
        <% end %>
      </div>

      <div class = "form-group">
        <%= f.label "Начало приема" %>
        <input type='datetime-local' name = 'event[start_time]', class = 'form-control'>
        <% @event.errors.full_messages_for(:start_time).each do |message| %>
          <div class="alert alert-warning alert-event"><%= message %></div>
        <% end %>
      </div>

      <div class = "form-group">
        <%= f.label "Конец приема" %>
        <input type='datetime-local' name = 'event[end_time]', class = 'form-control'>
        <% @event.errors.full_messages_for(:end_time).each do |message| %>
          <div class="alert alert-warning alert-event"><%= message %></div>
        <% end %>
      </div>

      <div class = "form-group">
       <%= f.label "Комментарий" %>
       <%= f.text_area(:comment,  cols: 3, rows: 3, class: 'form-control') %>
       <%@event.errors.full_messages_for(:comment).each do |message| %>
         <div class="alert alert-warning alert-event"><%= message %></div>
       <% end %>
      </div>

      <%= f.submit "Отправить заявку", class: "btn btn-info btn-event" %>
      <% end %>
    </div>
    <div class="col-sm">
    </div>
  </div>

</div>
