<% unless @avail_time[0..-2].empty? %>
<br>
<p class="text-center alert alert-primary" role="alert">Доступное времени для записи<br>
<% @avail_time[0..-2].each do |time|%>
  <label>
    <%= time.to_s + ':00'+ '-'+(time+1).to_s + ':00' %>
    <input name="event[start_time]" type="radio" value="<%= (@time.to_time+time.hour).to_datetime %>" checked="checked"></label>
<% end %>
<% else %>
</p>
<br>
<p class="text-center alert alert-primary" role="alert">Нет доступного времени для записи</p>
<% end %>
