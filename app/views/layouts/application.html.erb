<!DOCTYPE html>
<html class="h-100">
  <head>
    <title>MedHelper</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag '//ajax.googleapis.com/ajax/libs/jqueryui/1.12.1/themes/le-frog/jquery-ui.min.css' %>
    <link rel="stylesheet" href="path/to/font-awesome/css/font-awesome.min.css">
    <meta name="google-signin-client_id" content="<%=ENV.fetch("GOOGLE_CLIENT_ID")%>.apps.googleusercontent.com">
    <script src="https://apis.google.com/js/platform.js" async defer></script>

  <body class="d-flex flex-column h-100">
  <%= render 'layouts/navbar' %>
  <div class="container pt-3">
    <div class="row">
      <div class="col-12 text-center">
        <% flash.each do |name, message| %>
          <p class="alert alert-<%= name %>">
            <%= message %>
          </p>
        <% end %>
      </div>
    </div>
    <%= yield %>
  </div>
  </body>
  <%= render 'layouts/footer' %>
</html>
