<div class="container">
  <h5 class="text-center">Список пациентов</h5>
  <% @events.each do |event|%>
  <div class="row">
    <div class="col-sm-10 offset-md-1">
      <div class="card card-pacient-first">
        <div class="card-body">
          <div class="row">
            <div class="col-sm-2">
              <%= image_tag event.user.card.image, size: 100, class: 'rounded-circle' %>
            </div>
            <div class="col-sm-6">
              <h5 class="fw-lighter"><strong><%= event.user.card&.full_name %></strong></h5>
              <p class="fw-lighter">Email: <%= event.user.email %></p>
            </div>
            <div class="col-sm-4">
              <%= link_to "Карта пациентв", user_card_path(event.user, event.user.card), class: "btn btn-outline-info btn-show-event"%>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <br>
 <% end %>
</div>
