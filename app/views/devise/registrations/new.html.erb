<div class="container text-center">
  <h2 class="text-center py-5">Регистрация</h2>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field m-auto w-50">
      <%= f.text_field :name, autofocus: true, placeholder: "ФИО", class: "form-control" %>
    </div>
    <br/>
    <div class="field m-auto w-50">
      <%= f.email_field :email, autocomplete: "email", placeholder: "Email", class: "form-control" %>
    </div>
    <br/>
    <div class="field m-auto w-50">
      <%= f.phone_field :phone, placeholder: "Телефон", class: "form-control" %>
    </div>
    <br/>
    <div class="field m-auto w-50">
      <%= f.text_field :address, placeholder: "Адресс", class: "form-control" %>
    </div>
    <br/>
    <div class="field d-inline-flex w-50">
      <%= f.date_field :birthday, :value => Time.now.strftime('%Y-%m-%d'), :class => "form-control" %>
    </div>
    <br/>
    <div class="field my-3 m-auto mb-0  w-50">
      <%= f.password_field :password, autocomplete: "new-password", placeholder: "Пароль", class: "form-control" %>
    </div>

    <% if @minimum_password_length %>
      <div>
        <em class="small">(<%= @minimum_password_length %> символов минимум)</em>
      </div>
    <% end %>

    <div class="field my-3 m-auto mt-0 w-50">
      <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Подтвердите пароль", class: "form-control" %>
    </div>

    <div class="actions d-grid w-50 m-auto">
      <%= f.submit "Зарегистрироваться", class: "btn btn-primary" %>
    </div>
  <% end %>

  <div class="actions d-grid w-50 m-auto">
    <%= render "devise/shared/links" %>
  </div>


</div>